<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">
    <!--Up-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/up"
        android:background="#4DBFFF"
        >
        <ImageView
            android:id="@+id/logoimage"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/sa3edlogo" />
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginLeft="95dp"
            android:background="@drawable/edit"
            android:drawableRight="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:hint="    Search"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/search_bar"
            android:src="@drawable/ic_bell" />
    </RelativeLayout>

    <!--center-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/user_icon"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="#4DBFFF"
        app:strokeWidth="2dp"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="140dp"
        android:text=""
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#777b7e"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="140dp"
        android:text="Rating:"
        android:textSize="20dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="130dp"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        style="?android:attr/ratingBarStyleIndicator"
        android:isIndicator="false"
        android:theme="@style/ratingBar"/>

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#777b7e"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="10dp"
        android:text="ACCOUNT"
        android:textSize="20dp"
        android:paddingLeft="10dp"/>
    <Button
        android:id="@+id/manager_account"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="250dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/user2"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Manager account"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:paddingLeft="25dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"/>
    <Button
        android:id="@+id/activity"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="290dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/activity_icon"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Activity"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:paddingLeft="25dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <Button
        android:id="@+id/privacy"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="330dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/lock_icon"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Privacy"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:paddingLeft="25dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <View
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="13dp"
        android:background="#94989B"/>
    <TextView
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#777b7e"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="10dp"
        android:text="NOTIFICATIONS"
        android:textSize="20dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:id="@+id/allow_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="10dp"
        android:text="Allow notifications"
        android:textSize="17dp"
        android:drawableLeft="@drawable/bell_icon"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"/>
    <Switch
        android:id="@+id/switch_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:checked="false"
        android:layout_marginLeft="365dp"
        android:theme="@style/SCBSwitch"/>
    <View
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="13dp"
        android:background="#94989B"/>
    <Button
        android:id="@+id/help"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="460dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/info_icon"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Help"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:paddingLeft="25dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <Button
        android:id="@+id/log_out"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="500dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/sign_out"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Log out"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:paddingLeft="25dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24" />

    <!--Bottom-->
    <RelativeLayout
        android:id="@+id/down"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="800dp">
        <ImageView
            android:id="@+id/homelogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home"
            android:layout_centerVertical="true"
            android:layout_marginLeft="74dp"/>
        <ImageView
            android:id="@+id/shieldlogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/shield"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/user1logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shieldlogo"
            android:layout_marginLeft="89dp"
            />
    </RelativeLayout>

</RelativeLayout>