<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostRegisterActivity"
    android:background="@drawable/backgroundpost">
    <TextView
        android:id="@+id/completeprof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete Your Profile"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>
    <!--Name-->
<TextView
    android:id="@+id/name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SSN:"
    android:layout_below="@+id/completeprof"
    android:textSize="20sp"
    android:textColor="@android:color/black"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/ssn_edittext"
        android:layout_below="@+id/name"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittt"
        android:hint="    Enter your ssn here..."
        android:inputType="textCapWords"
        />
    <!--BirthDate-->
 <TextView
     android:id="@+id/birthdate"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/ssn_edittext"
     android:text="Birthdate:"
     android:textSize="20sp"
     android:textColor="@android:color/black"
     android:layout_marginLeft="15dp"
     android:layout_marginTop="35dp"
     />
    <EditText
        android:id="@+id/day"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_below="@+id/birthdate"
        android:background="@drawable/edittt"
        android:layout_marginLeft="15dp"
        android:hint="DD"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:inputType="number"/>
    <EditText
    android:id="@+id/month"
    android:layout_width="65dp"
    android:layout_height="30dp"
    android:layout_toRightOf="@+id/day"
    android:layout_below="@+id/birthdate"
    android:background="@drawable/edittt"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:hint="MM"
        android:gravity="center_horizontal"
    android:inputType="number"/>
    <EditText
        android:id="@+id/year"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/month"
        android:layout_below="@+id/birthdate"
        android:background="@drawable/edittt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:hint="YYYY"
        android:gravity="center_horizontal"
        android:inputType="number"/>
    <!--Gender-->
    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day"
        android:text="Gender:"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        />
    <RadioGroup
        android:id="@+id/group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/gender"
    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/button_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Male"
        android:textSize="18sp" />
    <RadioButton
        android:id="@+id/button_female"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Female"
    android:layout_below="@+id/gender"
    android:layout_toRightOf="@+id/button_male"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="10dp"
    android:textSize="18sp"
    />
   </RadioGroup>
    <!--Leavearea-->
    <TextView
        android:id="@+id/livig_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group"
        android:text="Living area:"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        />
<EditText
    android:id="@+id/district"
    android:layout_width="190dp"
    android:layout_height="35dp"
    android:layout_below="@+id/livig_area"
    android:background="@drawable/edittt"
    android:layout_marginLeft="15dp"
    android:hint="District | ex:Madenty"
    android:layout_marginTop="10dp"
    android:inputType="textCapWords"/>
    <EditText
        android:id="@+id/city"
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:hint="       City | ex:Cairo"
        android:layout_below="@+id/livig_area"
        android:layout_toRightOf="@+id/district"
        android:background="@drawable/edittt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:inputType="textCapWords"
        />
    <!--ProfilePicture-->
    <TextView
        android:id="@+id/profilepicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a profile picture:"
        android:layout_below="@+id/district"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        />
<EditText
    android:id="@+id/picture"
    android:layout_width="320dp"
    android:layout_height="35dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/edittt"
    android:layout_below="@+id/profilepicture"
    android:drawableRight="@drawable/ic_more_horiz"
    android:hint="    Choose from gallery..."
    android:inputType="none"
   />
    <Button
        android:id="@+id/cont_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/editt"
        android:text="Continue"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:textStyle="normal"
        android:fontFamily="sans-serif"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/picture"
        android:layout_marginTop="85dp"
        android:textAllCaps="false"/>
</RelativeLayout>